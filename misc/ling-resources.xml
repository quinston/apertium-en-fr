<!-- Linguistic resources-->
<ling-resources>
   <name>My linguistic resources</name>
   <description>My linguistics resources: morphological and bilingual dictionaries, cross models, corpora, etc.</description>
   
   <resource-set>
      <name>My linguistic resources to get English-French language pair.</name>
      <description>Linguistic resources that I use to cross English-Spanish and French-Spanish language pairs in order to get English-French</description>
      <!-- cross model en-ca-fr -->
      <resource>
         <property name="name" value="cross-en-ca-fr"/>
         <property name="type" value="cross-model"/>
         <property name="sl" value="en"/>
         <property name="tl" value="fr"/>
         <property name="for-crossing" value="yes"/>
         <property 
            name="src" value="cross-en-es-fr.xml"/>
         <property name="version" value="unstable"/>
      </resource>
           
      <!-- 'fr' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-fr"/>
         <property name="type" value="mon"/>
         <property name="sl" value="fr"/>
         <property name="for-crossing" value="yes"/>
         <property 
            name="src" value="../apertium-en-fr.fr.metadix"/>
         <property name="version" value="stable"/>
      </resource>
      
      <!-- 'en' morphological dictionary -->
      <resource>
         <property name="name" value="apertium-en"/>
         <property name="type" value="mon"/>
         <property name="sl" value="en"/>
         <property name="for-crossing" value="yes"/>
         <property 
            name="src" value="../apertium-en-fr.en.metadix"/>
         <property name="version" value="stable"/>
      </resource>
      
      <!-- 'en-ca' bilingual dictionary -->   
      <resource>
         <property name="name" value="apertium-en-ca"/>
         <property name="type" value="bil"/>
         <property name="sl" value="en"/>
         <property name="tl" value="ca"/>
         <property name="for-crossing" value="yes"/>
         <property 
            name="src" value="../../apertium-en-ca/apertium-en-ca.en-ca.dix"/>
         <property name="version" value="stable"/>
      </resource>
      
      <!-- 'es-ca' bilingual dictionary -->
      <resource>
         <property name="name" value="apertium-fr-ca"/>
         <property name="type" value="bil"/>
         <property name="sl" value="fr"/>
         <property name="tl" value="ca"/>
         <property name="for-crossing" value="yes"/>
         <property 
            name="src" value="../../apertium-fr-ca/apertium-fr-ca.fr-ca.dix"/>
         <property name="version" value="stable"/>
      </resource>
   </resource-set>
      
</ling-resources>

